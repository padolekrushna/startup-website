      "type": "string",
      "description": "Phone number"
    },
    "current_location": {
      "type": "string",
      "description": "Current location"
    },
    "linkedin_url": {
      "type": "string",
      "description": "LinkedIn profile URL"
    },
    "portfolio_url": {
      "type": "string",
      "description": "Portfolio/website URL"
    },
    "resume_url": {
      "type": "string",
      "description": "URL to uploaded resume"
    },
    "education": {
      "type": "string",
      "description": "Educational background"
    },
    "experience_years": {
      "type": "number",
      "description": "Years of relevant experience"
    },
    "current_role": {
      "type": "string",
      "description": "Current job title/role"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of relevant skills"
    },
    "cover_letter": {
      "type": "string",
      "description": "Cover letter or motivation"
    },
