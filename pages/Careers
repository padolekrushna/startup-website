import React, { useState, useEffect } from 'react';
import { Job } from '@/entities/Job';
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardHeader, CardTitle, CardFooter } from '@/components/ui/card';
import { MapPin, Briefcase, ChevronRight } from 'lucide-react';

export default function CareersPage() {
    const [jobs, setJobs] = useState([]);
    const [loading, setLoading] = useState(true);

    useEffect(() => {
        const fetchJobs = async () => {
            const openJobs = await Job.filter({ is_open: true });
            setJobs(openJobs);
            setLoading(false);
        };
        fetchJobs();
    }, []);

    if (loading) {
        return <div className="min-h-screen flex items-center justify-center bg-slate-50">Loading careers...</div>;
    }

    return (
        <div className="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 p-8">
            <div className="max-w-4xl mx-auto">
                <div className="text-center mb-12">
                    <h1 className="text-5xl font-bold text-slate-900 mb-4">Join Our Team</h1>
                    <p className="text-xl text-slate-600">
                        We're looking for passionate people to help us change the world of data analytics.
                    </p>
                </div>
                
                <div className="space-y-6">
                    {jobs.length > 0 ? jobs.map(job => (
                        <Card key={job.id} className="border-0 shadow-lg bg-white/80 backdrop-blur-sm hover:shadow-xl transition-shadow">
                            <CardHeader>
                                <CardTitle className="text-2xl text-blue-700">{job.title}</CardTitle>
                                <div className="flex items-center gap-6 text-sm text-slate-500 pt-2">
                                    <span className="flex items-center gap-2"><Briefcase className="w-4 h-4"/>{job.department}</span>
                                    <span className="flex items-center gap-2"><MapPin className="w-4 h-4"/>{job.location}</span>
                                    <span className="font-medium">{job.type}</span>
                                </div>
                            </CardHeader>
                            <CardContent>
                                <p className="text-slate-600 line-clamp-2">{job.description}</p>
                            </CardContent>
                            <CardFooter>
                                <Button variant="outline">
                                    Apply Now <ChevronRight className="w-4 h-4 ml-2"/>
                                </Button>
                            </CardFooter>
                        </Card>
                    )) : (
                        <Card className="text-center p-12 border-0 shadow-lg bg-white/80 backdrop-blur-sm">
                            <h3 className="text-2xl font-bold mb-2">No Open Positions</h3>
                            <p className="text-slate-600">We are not actively hiring at the moment, but we're always interested in great talent. Check back soon!</p>
                        </Card>
                    )}
                </div>
            </div>
        </div>
    );
}
